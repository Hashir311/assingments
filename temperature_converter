    <title>TEMPERATURE CONVERTER</title>
</head>
<body>
    <div id="inputBlock">
        <h1>WELCOME TO THE TEMPERATURE CONVERTER</h1>
        <div id="line"></div>
        <h2 >Enter the temperature in Celsius: </h2>
        <input type="number" id="temCel">
        <br>
        <button onclick="convertTemp()" id="button">Convert to Fahrenhiet</button>
    </div>
    <div id="resultBlock">
        <h2>Temperature in Fahrenhiet:</h2>
        <h3 id="result"></h3>
    </div>

    <script>
        function convertTemp(){
            let cel = document.getElementById("temCel").value;
            let fah = (cel*9)/5 + 32;

            document.getElementById("result").innerHTML = fah;

        }
    </script>
    
